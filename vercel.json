{
  "version": 2,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://rotakip.onrender.com/api/$1" },
    { "source": "/images/(.*)", "destination": "https://rotakip.onrender.com/images/$1" },
    { "source": "/groupImages/(.*)", "destination": "https://rotakip.onrender.com/groupImages/$1" },
    { "source": "/groupid=([a-zA-Z0-9_-]+)", "destination": "/groups.html" }
  ],
  "crons": [
    {
      "path": "/api/ping",
      "schedule": "*/2 * * * *"
    }
  ]
}

